<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jugadores">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="891dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondopan" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="101dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="192dp"
            android:layout_height="106dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome User1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="762dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Jugadores"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="94dp"
                android:layout_height="82dp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:text="Nombre_jugador"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="193dp"
                    android:layout_height="39dp"
                    android:background="#EDE4DFDF"
                    android:ems="10"
                    android:hint="Introduce el nombre"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="182dp"
                    android:layout_height="35dp"
                    android:backgroundTint="#BC673AB7"
                    android:text="Guardar"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="94dp"
                android:layout_height="82dp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:text="Nombre_jugador"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="193dp"
                    android:layout_height="39dp"
                    android:background="#EDE4DFDF"
                    android:ems="10"
                    android:hint="Introduce el nombre"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="182dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#BC673AB7"
                    android:text="Guardar"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:text="Nombre_jugador"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00BCD4"
                android:text="@string/editar" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F44336"
                android:text="@string/eliminar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:text="Nombre_jugador"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00BCD4"
                android:text="@string/editar" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F44336"
                android:text="@string/eliminar" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>